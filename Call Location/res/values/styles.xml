<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="CarbonTheme" parent="android:Theme">       
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:windowBackground">@drawable/carbon_background</item>
    </style>
    
    <style name="ContentContainer"> 
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_weight">0.31</item>
        <item name="android:background">@drawable/beveled_corner_shape</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="RowContainer">       
		<item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    
</resources>