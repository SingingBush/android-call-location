<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.samael.android.calllocation"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="8" />
    
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET" />  
    <user-permission android:name="android.permission.CALL_PHONE" />  
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:icon="@drawable/icon_launcher"
        android:label="@string/app_name"
        android:theme="@style/BackgroundStyle" >
        
        <uses-library android:name="com.google.android.maps" />
        
        <activity
            android:label="@string/app_name"
            android:name=".TempTestActivity"
            android:screenOrientation="portrait" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".CallHistoryActivity" android:screenOrientation="portrait" />
        
        <activity android:name=".CallMapActivity" android:screenOrientation="portrait" />
        
        <activity android:name=".calllocation.SettingsActivity" android:screenOrientation="portrait" />
        
        <service android:enabled="true" android:name=".CallLocationService" />
        
        <receiver android:name=".ServiceReceiver">  
			<intent-filter>  
				<action android:name="android.intent.action.PHONE_STATE" />  
	    	</intent-filter>  
		</receiver>
		
    </application>

</manifest>